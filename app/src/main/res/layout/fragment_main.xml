<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.di_frameworks.ui.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.mainText}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/from_db_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="get from db"
            android:onClick="@{() -> viewModel.getSmthFromDB()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_text" />

        <Button
            android:id="@+id/to_feature_fragment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="go to feature fragment"
            android:onClick="@{() -> viewModel.goToFeatureClicked()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/from_db_button" />

        <Button
            android:id="@+id/to_second_main_fragment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="go to second main fragment"
            android:onClick="@{() -> viewModel.goToSecondMainClicked()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/to_feature_fragment_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
